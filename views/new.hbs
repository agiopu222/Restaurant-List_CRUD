<div class="m-1">
  <form action="/restaurants" method="POST">

    {{!-- 餐廳名稱 --}}
    <div class="mt-2 w-50 mx-auto">
      <label for="name" class="col-form-label">
        *餐廳名稱：
      </label>
      <input type="text" class="form-control" name="name" placeholder="＊必填，請輸入餐廳名稱">
      <div class="invalid-feedback">
        請輸入有效的餐廳名稱！
      </div>
    </div>

    {{!-- 餐廳英文名稱 --}}
    <div class="mt-2 w-50 mx-auto">
      <label for="name" class="col-form-label">
        餐廳英文名稱：
      </label>
      <input type="text" class="form-control" name="name_en" placeholder="選填，請輸入餐廳英文名稱">
    </div>

    {{!-- 類別 --}}
    <div class="mt-2 w-50 mx-auto">
      <label for="category" class="col-form-label">
        *類別：
      </label>
      {{!-- 下拉式選單 --}}
      <select id="category" class="form-control" aria-describedby="categoryHelp" name="category" placeholder="＊必填，請選擇餐廳類別">
        <option selected>美式</option>
        <option >義式餐廳</option>
        <option >日本料理</option>
        <option >韓式料理</option>
        <option >台式料理</option>
        <option >中東料理</option>
        <option >咖啡</option>
        <option >酒吧</option>
      </select>
      <div class="invalid-feedback">
        請選擇餐廳類別！
      </div>
    </div>

    {{!-- 圖片網址 --}}
    <div class="mt-2 w-50 mx-auto">
      <label for="image" class="col-form-label">
        圖片網址：
      </label>
      <input type="URL" class="form-control" name="image" placeholder="選填，請輸入圖片網址">
    </div>

    {{!-- 地址 --}}
    <div class="mt-2 w-50 mx-auto">
      <label for="location" class="col-form-label">
        *地址：
      </label>
      <input type="text" class="form-control" name="location" placeholder="＊必填，請輸入完整地址">
      <div class="invalid-feedback">
        請輸入有效的餐廳地址！
      </div>
    </div>

    {{!-- 電話 --}}
    <div class="mt-2 w-50 mx-auto">
      <label for="phone" class="col-form-label">
        電話：
      </label>
      <input type="tel" class="form-control" name="phone" placeholder="選填，請輸入餐廳電話號碼">
    </div>

    {{!-- Google Map網址 --}}
    <div class="mt-2 w-50 mx-auto">
      <label for="google_map" class="col-form-label">
        Google Map網址：
      </label>
      <input type="URL" class="form-control" name="google_map" placeholder="選填，請輸入餐廳的google map網址">
    </div>

    {{!-- 評分 --}}
    <div class="mt-2 w-50 mx-auto">
      <label for="rating" class="col-form-label" >
        *評分：
      </label>
      <input type="text" class="form-control" name="rating" placeholder="必填，請輸入評分1～5分">
    </div>

    {{!-- 餐廳簡介 --}}
    <div class="mt-2 w-50 mx-auto">
      <label for="description" class="col-form-label">
        *餐廳簡介：
      </label>
      <input type="text" class="form-control" name="description" placeholder="必填，請輸入" >
      <div class="invalid-feedback">
        請輸入餐廳簡介！
      </div>
    </div>

    <button type="submit" class="btn btn-primary btn-sm d-grid gap-2 col-6 mt-3 mx-auto">Create</button>
    <a class="btn btn-secondary btn-sm d-grid gap-2 col-6 mt-3 mx-auto" href="/" role="button">Cancel</a>
  </form>
</div>