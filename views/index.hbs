<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
          <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png" width="30" height="30" class="d-inline-block align-top" alt="我的餐廳清單">
          喜愛的餐廳列表
        </a>
    </div>
  </nav>

  <div class="banner"></div>
</header>

<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找我愛的餐廳：</h4>
        <div class="input-group-1">
          <input type="text" name="keyword" class="form-control" placeholder="請輸入餐廳中文/英文名稱/類別名稱" aria-label="Restaurant Name..." value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
      <div class="text-end">
        <a href="/restaurants/new"><button class="btn btn-primary">點我新增自己喜歡的餐廳</button></a>
      </div>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
        {{#each restaurants}}
          <div class="card mb-3 ">
            <a href="/restaurants/{{this._id}}" class="text-secondary">
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>

                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i>{{this.category}}
                </div>

                <span class="badge rounded-pill bg-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>

                <div class="footer mb-1 d-flex justify-content-end align-items-center">
                {{!-- edit --}}
                <a href="/restaurants/{{this._id}}/edit"><button class="btn btn-info">編輯</button></a>
                {{!-- delete --}}
                <form action="/restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
                  <button type="submit" class="btn btn-danger" id="delete" data-id ="{{this._id}}">刪除</button>
                </form>
                </div>
              </div>
            </a>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>